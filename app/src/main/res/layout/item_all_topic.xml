<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="235dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <ImageView
        android:id="@+id/iv_all_topic_item_pic"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_all_topic_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_all_topic_item_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/test"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_all_topic_item_subscribeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_all_topic_item_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="4dp"
        android:text="@string/test"
        android:textColor="@color/colorShallowBlack"
        android:textSize="11sp"/>

    <Button
        android:id="@+id/btn_all_subscription"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_below="@id/tv_all_topic_item_subscribeNum"
        android:layout_centerHorizontal="true"
        android:background="@drawable/details_button_selector"
        android:text="@string/subscription"
        android:textColor="@color/colorLightBlue"
        android:textSize="13sp"/>

</RelativeLayout>
