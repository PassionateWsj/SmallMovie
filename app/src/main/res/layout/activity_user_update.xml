<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMineBackground"
    android:orientation="vertical"
    tools:context="com.sha1607.smallmovie.updateUserActivity.UserUpdateActivity">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_left"
            android:layout_alignParentLeft="true"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:text="编辑个人资料"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/tv_save"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorUpdateText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:background="@color/colorWhite">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@mipmap/register_logo"/>
</LinearLayout>
    <include layout="@layout/include_myfragment_blank"></include>
    <include layout="@layout/include_outter_horizon"></include>
    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/include_myfragment_text_text"></include>
        <include layout="@layout/include_inner_horizon"></include>
        <include layout="@layout/include_myfragment_text_text"></include>
        <include layout="@layout/include_inner_horizon"></include>
        <include layout="@layout/include_myfragment_text_arrow"></include>
    </LinearLayout>
    <include layout="@layout/include_outter_horizon"></include>


</LinearLayout>


