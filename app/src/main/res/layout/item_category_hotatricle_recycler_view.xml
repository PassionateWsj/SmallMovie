<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    app:cardElevation="2dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_article_pic"
            android:layout_width="134dp"
            android:layout_height="108dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/iv_article_pic"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/colorBlackShallow"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_article_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_article_title"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorShallowBlack"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>