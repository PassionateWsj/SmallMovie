<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_discover_writer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_discover_nikname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_discover_writer"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_discover_writer"
        android:textColor="@color/colorBlue"
        />

    <TextView
        android:id="@+id/tv_discover_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_discover_nikname"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_discover_writer"
        android:textColor="@color/colorTipGray"
        android:textSize="10sp"
        />

    <TextView

        android:id="@+id/tv_discover_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_discover_writer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/colorBlack"
        />

    <RelativeLayout
        android:id="@+id/rl_discover_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_discover_comment"
        android:layout_margin="10dp"
        android:background="@color/colordividGray"
        >

        <ImageView
            android:id="@+id/iv_discover_film"
            android:layout_width="120dp"
            android:layout_height="170dp"
            />

        <TextView
            android:id="@+id/tv_discover_film_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_discover_film"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_confirm_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_discover_film_name"
            android:layout_below="@id/tv_discover_film_name"
            android:layout_marginTop="20dp"
            android:text="@string/discover_confirm_director"
            android:textColor="@color/colorTipGray"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tv_discover_film_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_discover_film_name"
            android:layout_below="@id/tv_confirm_director"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_confirm_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_discover_film_name"
            android:layout_below="@id/tv_discover_film_director"
            android:layout_marginTop="5dp"
            android:text="@string/discover_confirm_actor"
            android:textColor="@color/colorTipGray"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tv_discover_film_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_discover_film_name"
            android:layout_below="@id/tv_confirm_actor"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            />

        <ImageView
            android:id="@+id/iv_bj"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_findview_bj"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pl"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_discover_film"
        android:layout_marginRight="10dp"
        android:src="@drawable/iv_findview_pl_white"
        />

    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_discover_film"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_pl"
        android:text="0"
        />

    <ImageView
        android:id="@+id/iv_discover_love"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/rl_discover_film"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_praise"
        android:src="@drawable/zan_new_white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/iv_pl"
        android:layout_marginTop="10dp"
        android:background="@color/colordividGray"
        />
</RelativeLayout>